{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug ADCO Backend",
            "program": "${workspaceFolder}/backend/target/debug/adco-backend",
            "preLaunchTask": "cargo-build-debug",
            "args": [],
            "cwd": "${workspaceFolder}/backend",
            "environment": [
                {
                    "name": "RUST_LOG",
                    "value": "debug"
                }
            ],
            "console": "integratedTerminal"
        },
        {
            "type": "lldb",
            "request": "launch", 
            "name": "Run ADCO Backend (Release)",
            "program": "${workspaceFolder}/backend/target/release/adco-backend",
            "preLaunchTask": "cargo-build-release",
            "args": [],
            "cwd": "${workspaceFolder}/backend",
            "environment": [
                {
                    "name": "RUST_LOG",
                    "value": "info"
                }
            ],
            "console": "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Frontend (Nuxt)",
            "cwd": "${workspaceFolder}/frontend",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "dev"],
            "console": "integratedTerminal",
            "skipFiles": ["<node_internals>/**"]
        }
    ]
}